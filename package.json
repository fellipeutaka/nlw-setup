{
  "name": "nlw-setup",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "dayjs": "^1.11.7",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "commitizen": "^4.2.6",
    "inquirer": "8",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "@types/jest": "29.2.5",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "jest": "29.3.1",
    "prettier": "latest",
    "ts-jest": "29.0.5",
    "turbo": "latest",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.25.0",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
